<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.boot3.dao.IAdminUserDao">

    <sql id="Base_Column_List">
        id, username, nick_name, password, status, create_time, update_time
    </sql>

    <select id="selectByUsername" resultType="com.example.boot3.model.po.AdminUserPO">
        select
        <include refid="Base_Column_List"/>
        from admin_user
        where username = #{username}
    </select>
</mapper>
